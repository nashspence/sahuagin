{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Docker Compose",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "docker-compose down && docker-compose build && DEBUG=True docker-compose up -d && sleep 2"
            ],
            "problemMatcher": []
        },
        {
            "label": "Stop Docker Compose",
            "type": "shell",
            "command": "docker-compose down",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            },
            "dependsOn": "Run Cleanup"
        },
    ]
}