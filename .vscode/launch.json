{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Rust",
            "cargo": {
                "args": [
                    "build",
                    "--manifest-path",
                    "${workspaceFolder}/Cargo.toml"
                ]
            },
            "program": "${workspaceFolder}/target/debug/sahuagin",
            "args": [],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": [
                "rust"
            ],
            "preLaunchTask": "Start Docker Compose",
            "postDebugTask": "Stop Docker Compose"
        }
    ]
}